syntax enable
syntax on
autocmd FileType yaml setlocal ts=2 sts=2 sw=2 expandtab

inoremap ii <Esc>
inoremap " ""<left>
inoremap ' ''<left>
inoremap ( ()<left>
inoremap [ []<left>
inoremap { {}<left>
inoremap {<CR> {<CR>}<ESC>O
inoremap (<CR> (<CR>)<ESC>O
inoremap {;<CR> {<CR>};<ESC>O

" Delete between the two parentheis () {} [] with:
" ca + () or [] or {}

inoremap <expr><Tab> (pumvisible()?(empty(v:completed_item)?"\<C-n>":"\<C-y>"):"\<Tab>")

set number
set showcmd
